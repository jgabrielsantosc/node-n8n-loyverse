{
	"compilerOptions": {
		"lib": ["es2019"],
		"module": "commonjs",
		"target": "es2019",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
} 